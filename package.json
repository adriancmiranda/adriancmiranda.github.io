{
  "private": true,
  "name": "adriancmiranda",
  "version": "1.0.0",
  "description": "My new git-push powered folio",
  "author": "Adrian C. Miranda",
  "license": "ISC",
  "main": "scripts/config.js",
  "scripts": {
    "preinstall": "npm run clean",
    "postinstall": "jspm install",
    "start": "npm install && npm run watch",
    "clean": "npm cache clean && rimraf *.log styles/*.css scripts/*bundle.js* npm-debug.log && jspm clean",
    "eslint": "eslint scripts/ --ignore-pattern \"scripts/bundle.js\" --ignore-pattern \"scripts/vendors/*\"",
    "test": "mocha tests/",
    "styl": "stylus styles/index.styl -u nib -o styles/index.css -c --disable-cache",
    "uglifyjs": "npm run jspm && uglifyjs scripts/bundle.js -co scripts/bundle.js --source-map scripts/bundle.map --wrap -q 1",
    "jspm": "jspm bundle-sfx portifa/index scripts/bundle.js",
    "prebuild": "parallelshell \"npm run eslint\" \"npm run clean -s\"",
    "build": "parallelshell \"npm run uglifyjs -s\" \"npm run styl -s\"",
    "postbuild": "postcss --use autoprefixer --autoprefixer.browsers \"> 5%\" -o styles/index.css styles/index.css",
    "watch:test": "npm run mocha -- -w",
    "watch:styl": "npm run styl -- -w",
    "watch:jspm": "jspm-dev-builder portifa/index -o scripts/bundle.js",
    "watch": "parallelshell \"npm run watch:styl -s\" \"npm run watch:jspm -s\" \"npm run server -s\"",
    "server": "browser-sync start -s \"./\" -f \"./\" --index \"./index.html\" --port 3000",
    "preversion": "npm run test",
    "version": "npm run build && git add -A ./",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "browser-sync": "2.12.12",
    "eslint": "2.11.1",
    "jspm": "0.16.39",
    "jspm-dev-builder-cli": "0.2.0",
    "mocha": "2.5.3",
    "nib": "1.1.0",
    "parallelshell": "2.0.0",
    "postcss": "5.0.21",
    "rimraf": "2.5.2",
    "should": "9.0.0",
    "stylus": "0.54.5",
    "uglify-js": "2.6.2"
  },
  "jspm": {
    "configFile": "scripts/config.js",
    "directories": {
      "packages": "scripts/vendors"
    },
    "dependencies": {
      "console.js": "github:adriancmiranda/console.js@^1.0.6",
      "core-js": "npm:core-js@^2.1.0",
      "fetch": "github:github/fetch@^0.10.1",
      "text": "github:systemjs/plugin-text@^0.0.3"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-runtime": "npm:babel-runtime@^5.8.24"
    },
    "overrides": {
      "npm:core-js@2.0.3": {
        "main": "client/shim.min"
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "rules": {},
    "env": {
      "browser": true,
      "mocha": true,
      "es6": true
    }
  }
}
